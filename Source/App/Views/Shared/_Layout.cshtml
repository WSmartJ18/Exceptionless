@using System.Web.Optimization
@using Exceptionless.Core
@{
    string title = ViewBag.FullTitle ?? (ViewBag.Title != null ? "Exceptionless - " + ViewBag.Title : null) ?? "Exceptionless";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@title</title>

    <link rel="alternate" type="application/rss+xml" title="Exceptionless - News Feed" href="http://exceptionless.com/feed/" />
    <meta content="Exceptionless provides real-time error reporting for your apps. It organizes the gathered information into simple actionable data that will help your app become exceptionless!" name="description">
    <meta content="@title" property="og:title">
    <meta content="Exceptionless provides real-time error reporting for your apps. It organizes the gathered information into simple actionable data that will help your app become exceptionless!" property="og:description">
    <meta content="//app.exceptionless.com/images/exceptionless.png" property="og:image">

    <meta name="application-name" content="Exceptionless"/> 
    <meta name="msapplication-TileColor" content="#2c2c2c"/> 
    <meta name="msapplication-TileImage" content="/images/exceptionless-144.png"/>
    <meta name="msapplication-navbutton-color" content="#73C03A" />
    <meta name="msapplication-starturl" content="/project"/>
    <meta name="msapplication-task" content="name=Dashboard; action-uri=/project; icon-uri=/images/icons/dashboard.ico" />
    <meta name="msapplication-task" content="name=Most Recent; action-uri=/project/recent; icon-uri=/images/icons/recent.ico" />
    <meta name="msapplication-task" content="name=Most Frequent; action-uri=/project/frequent; icon-uri=/images/icons/frequent.ico" />
    <meta name="msapplication-task" content="name=New Errors; action-uri=/project/new; icon-uri=/images/icons/new.ico" />

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel='icon' href='/favicon.ico' type="image/x-icon">

    <meta name="copyright" content="&copy; @DateTime.Now.Year Exceptionless.com" />
    <meta name="version" content="@Settings.Current.Version" />
    <meta name="server" content="@Environment.MachineName" />

    <meta content="website" property="og:type">
    <meta name='viewport' content='initial-scale=.75, maximum-scale=1, minimal-ui' />
    <meta name="apple-mobile-web-app-title" content="Exceptionless" />

    <link rel="apple-touch-icon" sizes="57x57" href="/touch-icon-ipad-114.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/touch-icon-ipad-114.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/touch-icon-ipad-114.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/touch-icon-ipad-144.png" />

    <link href="//fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,300,400,600" rel="stylesheet">
    @if (IsSectionDefined("HeadContent")) {
        @RenderSection("HeadContent", required: false);
    } else {
        @Styles.Render("~/content/main.css")
    }


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body id="root">
    @RenderBody()
   
    @if (IsSectionDefined("FooterContent")) {
        @RenderSection("FooterContent", required: false);
    } else {
        @Scripts.Render("~/scripts/main.js")
    }

    @if (Settings.Current.EnableGoogleAnalytics) {
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', '@Settings.Current.GoogleAnalyticsId', 'exceptionless.com');
        ga('send', 'pageview');
    </script>
    }
</body>
</html>